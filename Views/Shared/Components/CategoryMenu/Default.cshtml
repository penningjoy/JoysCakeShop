@model IOrderedEnumerable<Category>

    <li class="dropdown">
        <a asp-controller="Cake"
           asp-action="Index"
           class="dropdown-toggle" data-toggle="dropdown">Cake Collection<b class="caret"></b></a>
        <ul class="dropdown-menu">
            @foreach (var category in Model)
            {
                <li>
                    <a asp-controller="Cake" asp-action="List"
                       asp-route-category="@category.CategoryName">@category.CategoryName</a>
                </li>
            }
            <li class="divider"></li>
            <li>
                <a asp-controller="Cake" asp-action="List" asp-route-Category="">View all cakes</a>
            </li>
        </ul>
    </li>
